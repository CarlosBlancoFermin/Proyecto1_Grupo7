<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.MenuActivity">

    <Button
        android:id="@+id/btMenuCrearUsuario"
        android:onClick="btListarEmpleados"
        android:text="@string/tag_nuevoEmpleado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/glMenuBottom"
        app:layout_constraintVertical_bias="0.3"
        style="@style/botonLight"/>

    <Button
        android:id="@+id/btMenuListaUsuarios"
        android:onClick="btListarEmpleados"
        android:text="@string/tag_listar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/glMenuBottom"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/botonLight"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glMenuBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <Button
        android:id="@+id/bt_creditos"
        android:onClick="btcreditos"
        android:text="@string/tag_creditos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/glMenuBottom"
        style="@style/botonRedondeado"/>



</androidx.constraintlayout.widget.ConstraintLayout>