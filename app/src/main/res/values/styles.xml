<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="componentInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="etiquetaInfo" parent="componentInfo">
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="campoInfo" parent="componentInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:background">#EEEEEE</item>
    </style>
    <style name="nombreLista">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="nombreCreadores">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="logoLinkedin">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="botonAncho" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="botonLight" parent="botonAncho">
        <item name="android:background">@color/element</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
    </style>

    <style name="botonDark" parent="botonAncho">
        <item name="android:background">@color/dark</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="botonRedondeado" parent="botonDark">
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginEnd">90dp</item>


    </style>

</resources>